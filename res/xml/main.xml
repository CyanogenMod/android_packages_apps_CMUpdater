<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/app_name"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

     <ListPreference
        android:key="pref_update_check"
        android:dialogTitle="@string/update_check_title"
        android:title="@string/update_check_title"
        android:entries="@array/update_check_entries"
        android:entryValues="@array/update_check_values"/>

     <ListPreference
        android:key="pref_update_type"
        android:dialogTitle="@string/update_type_title"
        android:title="@string/update_type_title"
        android:entries="@array/update_type_entries"
        android:entryValues="@array/update_type_values"/>

     <!-- TODO: add this back once we have a way of doing backups that is not recovery specific
     <CheckBoxPreference
        android:key="pref_backup_rom"
        android:defaultValue="true"
        android:title="@string/backup_rom_title" 
        android:summary="@string/backup_rom_summary" />
    -->

	<!-- Notification Preferences -->

	<CheckBoxPreference
		android:key="pref_allow_notifications_check"
		android:title="@string/ns_allow_notifications_title"
		android:summary="@string/ns_check_to_allow_notifications"
		android:defaultValue="true" />

	<RingtonePreference 
		android:showDefault="true"
   		android:key="pref_ringtone" 
		android:title="@string/ns_choose_ringtone_title"
   		android:ringtoneType="all"
		android:showSilent="true"
		android:shouldDisableView="true">
	</RingtonePreference>

	<!-- /Notification Preferences -->

    <PreferenceCategory
        android:key="updates_category"
        android:title="@string/available_updates_title">
    </PreferenceCategory>
		
</PreferenceScreen>
