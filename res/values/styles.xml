<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance" parent="android:TextAppearance">
    </style>
    <style name="TextAppearance.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TextAppearance.TextSpinner">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="TextAppearance.TextSmall">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TextAppearance.Subtitle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TextAppearance.Button" >
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Theme.loading" parent="android:Theme">
        <item name="android:windowBackground">@drawable/loading</item>
        <item name="android:windowNoTitle">false</item>
    </style>
</resources>